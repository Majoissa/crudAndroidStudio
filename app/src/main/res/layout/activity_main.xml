<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee_shade"
        android:shadowColor="@color/black"
        android:text="CRUD ISSA"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_error"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnAfegir"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/design_default_color_error"
        android:fontFamily="@font/alata"
        android:text="Afegir" />

    <Button
        android:id="@+id/btnObtenir"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/design_default_color_error"
        android:fontFamily="@font/alata"
        android:text="Obtenir" />

    <Button
        android:id="@+id/btnObtenirTots"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/design_default_color_error"
        android:fontFamily="@font/alata"
        android:text="Obtenir Tots" />

    <Button
        android:id="@+id/btnActualitzar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/design_default_color_error"
        android:fontFamily="@font/alata"
        android:text="Actualitzar" />

    <Button
        android:id="@+id/btnEsborrar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/design_default_color_error"
        android:fontFamily="@font/alata"
        android:text="Esborrar" />



</LinearLayout>